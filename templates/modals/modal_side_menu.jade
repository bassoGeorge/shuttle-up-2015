.modal-header
  button.close(ng-click='$dismiss()')
    span &times
  h5.modal-title Menu
.modal-body
  ul.nav.nav-pills.nav-stacked
    li.nav-item(
      ng-repeat='route in routes'
      ng-click='$dismiss()'
      ui-sref='{{:: route[2] }}'
    )
      // ng-class='{active: isState(route[1])}'
      a.nav-link(
        ng-class="(route[1] | includedByState) ? 'active': ' '"
       ) {{:: route[0] }}
.modal-footer
  ul.list-unstyled
    li.text-muted Signed in as&nbsp
      strong {{username()}}
    li
      a(ng-click='logout(); $dismiss()')
        i.fa.fa-sign-out.fa-fw.fa-lg
        | &nbspsign-out
